{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib", "esm", "dist"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "inputs": ["dist"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": ["tsconfig.json", ".father.base.ts"]
}